<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.SettingFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/darkThemeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/dark_theme"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:fontFamily="@font/asar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/darkThemeSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enabled_dark_theme"
        app:layout_constraintStart_toStartOf="@+id/darkThemeTitle"
        app:layout_constraintTop_toBottomOf="@+id/darkThemeTitle" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/darkThemeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:checked="false"
        app:layout_constraintBottom_toBottomOf="@+id/darkThemeSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/darkThemeTitle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/changeLanguageTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/language"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:fontFamily="@font/asar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/darkThemeSubTitle" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/changeLanguageSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/change_your_language"
        app:layout_constraintStart_toStartOf="@+id/changeLanguageTitle"
        app:layout_constraintTop_toBottomOf="@+id/changeLanguageTitle" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changeLanguageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="@string/change"
        app:layout_constraintBottom_toBottomOf="@+id/changeLanguageSubTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/changeLanguageTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>